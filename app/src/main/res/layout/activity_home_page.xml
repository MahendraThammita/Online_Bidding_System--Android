<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".MainActivity"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <include
                android:id="@+id/profActionbar"
                layout="@layout/new_header_action_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <include
                android:id="@+id/profActionbar"
                layout="@layout/secoundery_actionbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <include
                android:id="@+id/profActionbar"
                layout="@layout/homepage_search_action_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ViewFlipper
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_centerHorizontal="true"
                            android:backgroundTint="@color/colorPrimaryDark"
                            android:id="@+id/flipper"></ViewFlipper>

                    </RelativeLayout>


        <include
            android:id="@+id/profActionbar"
            layout="@layout/homepage_second_action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <include
            android:id="@+id/profActionbar"
            layout="@layout/homepage_third_action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

                    <ListView
                        android:id="@+id/HomeCardsList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:divider="@null">

                    </ListView>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="630dp"
        android:layout_marginLeft="295dp">
        <ImageButton
            android:id="@+id/addNew"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_button"
            android:backgroundTint="#c4001d"
            android:layout_weight="1"
            android:src="@drawable/addnew"
            android:textSize="35dp"
            android:layout_margin="10dp"/>
    </LinearLayout>

</RelativeLayout>