<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/HomeThirdAction"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000051"
    android:theme="@style/Platform.MaterialComponents.Light"
    app:contentInsetEnd="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetStart="0dp"
    android:contentInsetEnd="0dp"
    android:contentInsetLeft="0dp"
    android:contentInsetRight="0dp"
    android:contentInsetStart="0dp">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_button"
                android:src="@drawable/testmovie"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="25dp"
                android:backgroundTint="#e65100"
                android:layout_marginBottom="25dp"
                android:layout_marginRight="25dp"
                android:id="@+id/home_test">

            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="-20dp"
                android:text="Movies"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/testgarden"
                android:background="@drawable/circle_button"
                android:backgroundTint="#1faa00"
                android:layout_margin="25dp"
                android:id="@+id/home_test2">

            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="-20dp"
                android:text="Home-Garden"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_button"
                android:backgroundTint="#0277bd"
                android:layout_margin="25dp"
                android:src="@drawable/testhobby"
                android:id="@+id/home_test3">

            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="-20dp"
                android:text="Hobby"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/testbook"
                android:background="@drawable/circle_button"
                android:backgroundTint="#ff6f00"
                android:layout_margin="25dp"
                android:id="@+id/btnBook">

            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="-20dp"
                android:text="Books"
                />

        </LinearLayout>


    </LinearLayout>

</androidx.appcompat.widget.Toolbar>