<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myBids">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/primaryActbar"
            layout="@layout/primary_actionbar" />


        <include
            android:id="@+id/profActionbar"
            layout="@layout/secoundery_actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/primaryActbar" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">


                <ImageView
                    android:id="@+id/mybidTopimg"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:fitsSystemWindows="true"
                    android:padding="0dp"
                    android:src="@drawable/mybidsedi">

                </ImageView>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="230dp"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="352dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/warmcolor_rounded_corners"
                        android:backgroundTint="@color/colorAccent"
                        android:fontFamily="sans-serif-black"
                        android:text="My Bids"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/Black"
                        android:textColorHighlight="@color/colorPrimaryDark"
                        android:textSize="40dp" />

                </RelativeLayout>




            </RelativeLayout>


            <ListView
                android:id="@+id/myBidsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>

<!--                <include-->
<!--                    android:id="@+id/myBidsCard1"-->
<!--                    layout="@layout/my_bid_card"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content">-->

<!--                </include>-->



    </LinearLayout>
    //Start of middle part


    //End of Middle part

    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        app:cnb_menuResource="@menu/profile_bottom_nav"
        app:cnb_unselectedColor="@color/design_default_color_on_primary"
        tools:ignore="MissingConstraints">

    </com.ismaeldivita.chipnavigation.ChipNavigationBar>

</RelativeLayout>