<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:background="@color/colorPrimary"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="86dp"
            android:layout_height="86dp"
            app:cardCornerRadius="43dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/DrawableUserImage"
                app:shapeAppearanceOverlay="@style/roundedImages"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:src="@drawable/sampleuser">

            </com.google.android.material.imageview.ShapeableImageView>
        </androidx.cardview.widget.CardView>



            <TextView
                android:id="@+id/DrawableUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amita"
                android:text="@string/name"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:padding="0dp"
                tools:text="@tools:sample/full_names">


            </TextView>

            <TextView
                android:id="@+id/DrawableUseEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/EmailDemo"
                android:textColor="@color/white"
                android:textSize="12dp"></TextView>





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/wave2"
        android:paddingLeft="20dp">


    </LinearLayout>

</LinearLayout>

